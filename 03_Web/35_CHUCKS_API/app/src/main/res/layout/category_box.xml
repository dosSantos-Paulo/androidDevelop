<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/categoryBoxHeight"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/marginMin">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:gravity="center"
        app:cardCornerRadius="@dimen/boxRadius"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:shadowColor="@color/colorAccent"
        android:elevation="10dp">

        <TextView
            android:id="@+id/txt_categoryName_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:text="Current"
            android:textColor="@color/colorWithe"
            android:textSize="@dimen/CategoryBoxTextSize" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>